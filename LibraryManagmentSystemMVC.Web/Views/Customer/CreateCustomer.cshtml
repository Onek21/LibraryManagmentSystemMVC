@model LibraryManagmentSystemMVC.Application.ViewModel.CustomerVm.NewCustomerVm

@{
    ViewData["Title"] = "CreateCustomer";
}

<h1>CreateCustomer</h1>

<h4>NewCustomerVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <h4>Address</h4>   
            <div class="form-group">
                <input asp-for="Addresses[0].Id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Addresses[0].Country" class="control-label"></label>
                <input asp-for="Addresses[0].Country" class="form-control" />
                <span asp-validation-for="Addresses[0].Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses[0].City" class="control-label"></label>
                <input asp-for="Addresses[0].City" class="form-control" />
                <span asp-validation-for="Addresses[0].City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses[0].Street" class="control-label"></label>
                <input asp-for="Addresses[0].Street" class="form-control" />
                <span asp-validation-for="Addresses[0].Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresses[0].HouseNumber" class="control-label"></label>
                <input asp-for="Addresses[0].HouseNumber" class="form-control" />
                <span asp-validation-for="Addresses[0].HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="AddButton" type="button" value="New address" class="btn btn-dark" />
            </div>
            <div id="TextBoxContainer">

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary p-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(document).ready(function () {
        var i = 1;
        $("#AddButton").click(function () {
            var div = $("<div />");
            var value = "";

            var country = $("<label>Country</label>");
            var countryBox = $("<input class= 'form-control' />").attr("type", "textbox").attr("name", "Addresses[" + i + "].Country");
            var city = $("<label>City</label>");
            var cityBox = $("<input class ='form-control'/>").attr("type", "textbox").attr("name", "Addresses[" + i + "].City");
            var street = $("<label>Street</label>");
            var streetBox = $("<input class = 'form-control'/>").attr("type", "textbox").attr("name", "Addresses[" + i + "].Street");
            var houseNumber = $("<label>House number</label>")
            var houseNumberBox = $("<input class = 'form-control'/>").attr("type", "textbox").attr("name", "Addresses[" + i + "].HouseNumber");

            countryBox.val(value);
            cityBox.val(value);
            streetBox.val(value);
            houseNumberBox.val(value);
            div.append(country);
            div.append(countryBox);
            div.append(city);
            div.append(cityBox);
            div.append(street);
            div.append(streetBox);
            div.append(houseNumber);
            div.append(houseNumberBox);
            var button = $("<input class='btn btn-secondary mt-1 mb-1'/>").attr("type", "button").attr("value", "Remove");
            button.attr("onclick", "RemoveTextBox(this)");
            div.append(button);
            $("#TextBoxContainer").append(div);
            i++;

        });
    });

    function RemoveTextBox(button) {
        $(button).parent().remove();
    }
</script>
}
