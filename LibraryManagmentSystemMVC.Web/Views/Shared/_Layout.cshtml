<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagmentSystemMVC.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h4>LMS</h4>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="#reservationSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Rezerwacje</a>
                    <ul class="collapse list-unstyled" id="reservationSubmenu">
                        <li>
                            <a asp-area="" asp-controller="Reservation" asp-action="Index">Aktywne rezerwacje</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Reservation" asp-action="CompletedReservations">Zakończone rezerwacje</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Reservation" asp-action="CanceledReservations">Anulowane rezerwacje</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a asp-area="" asp-controller="Book" asp-action="Index">Książki</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Author" asp-action="Index">Autorzy</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Genre" asp-action="Index">Gatunki</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Customer" asp-action="Index">Klienci</a>
                </li>
                @if(User.IsInRole("Administrator") || User.IsInRole("Kierownik"))
                { 
                    <li>
                        <a asp-area="" asp-controller="Document" asp-action="Index">Dokumenty</a>
                    </li>
                }
                @if(User.IsInRole("Administrator"))
                { 
                    <li>
                        <a href="#userSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Administracja</a>
                        <ul class="collapse list-unstyled" id="userSubmenu">
                            <li>
                                <a asp-area="" asp-controller="User" asp-action="Index">Użytkownicy</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="User" asp-action="RolesList">Role</a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="bi bi-list"></i>
                </button>
                <partial name="_LoginPartial" />
            </div>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - LibraryManagmentSystemMVC.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
