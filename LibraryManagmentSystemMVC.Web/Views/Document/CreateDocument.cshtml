@model LibraryManagmentSystemMVC.Application.ViewModel.DocumentVm.NewDocumentVm

@{
    ViewData["Title"] = "CreateDocument";
}


<h4>Nowy dokument</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateDocument">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="control-label col-sm-2"></label>
                <div class="col-md-6">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Type" class="control-label col-sm-2"></label>
                <div class="col-md-6">
                    <select asp-for="Type" class="form-control">
                        <option value="1">Przyjęcie</option>
                        <option value="2">Utylizacja</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BookId" class="control-label col-sm-2"></label>
                <div class="col-md-6">
                    <select class="js-example-basic-single form-control" asp-for="BookId" asp-items="@(new SelectList(ViewBag.books,"Id","Name"))"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });
</script>
}
