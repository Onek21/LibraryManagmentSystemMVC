@model IEnumerable<LibraryManagmentSystemMVC.Application.ViewModel.GenreVm.GenreForListVm>

@{
    ViewData["Title"] = "Index";
}

<h3>Lista gatunków</h3>

<p>
    <input type="button" value="Dodaj" onclick="location.href='@Url.Action("CreateGenre", "Genre")'" class="btn btn-primary" />
</p>
<table class="table table-striped table-bordered" id="genreTable">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <input type="button" value="Edytuj" onclick="location.href='@Url.Action("EditGenre", "Genre", new { id = item.Id })'" class="btn btn-dark btn-sm" />
                    <input type="button" value="Usuń" onclick="location.href='@Url.Action("DeleteGenre", "Genre", new { id = item.Id })'" class="btn btn-danger btn-sm" />
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#genreTable').DataTable();
        });
    </script>
}
