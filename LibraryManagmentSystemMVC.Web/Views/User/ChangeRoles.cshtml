@model LibraryManagmentSystemMVC.Application.ViewModel.UsersVm.NewUserVm

@{
    ViewData["Title"] = "ChangeRoles";
}


<h4>Nadaj uprawnienia</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="ChangeRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="UserName" class="control-label col-md-2"></label>
                <div class="col-md-6">
                    <input readonly asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            
                <h5>Wybierz uprawnienia</h5>
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="UserRoles"
                                   value="@role.Name"
                                   @if (Model.UserRoles.Contains(role.Name)) { <text> checked </text> } />@role.Name
                            </label>
                        </div>
                    }
            
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
