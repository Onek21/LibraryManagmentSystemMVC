@model LibraryManagmentSystemMVC.Application.ViewModel.UsersVm.NewUserVm

@{
    ViewData["Title"] = "CreateUser";
}

<h4>Nowy użytkownik</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group row">
                <label asp-for="UserName" class="control-label col-sm-2"></label>
                <input asp-for="UserName" class="form-control col-md-6" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label col-sm-2"></label>
                <input asp-for="Email" class="form-control col-md-6" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName" class="control-label col-sm-2"></label>
                <input asp-for="FirstName" class="form-control col-md-6" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="control-label col-sm-2"></label>
                <input asp-for="LastName" class="form-control col-md-6" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="control-label col-sm-2"></label>
                <input asp-for="Password" type="password" class="form-control col-md-6" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="control-label col-sm-2"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control col-md-6" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
