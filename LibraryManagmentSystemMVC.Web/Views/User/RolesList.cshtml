@model IEnumerable<LibraryManagmentSystemMVC.Application.ViewModel.UsersVm.RoleForListVm>

@{
    ViewData["Title"] = "RolesList";
}

<h3>Lista uprawnień</h3>

<p>
    <input type="button" value="Dodaj" onclick="location.href='@Url.Action("CreateRole", "User")'" class="btn btn-primary" />
</p>
<table class="table table-striped table-bordered" id="roleTable">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#roleTable').DataTable({
                "columns": [
                    { "width": "50%" },
                    { "width": "50%" }
                ]
            });
        });
    </script>
}

