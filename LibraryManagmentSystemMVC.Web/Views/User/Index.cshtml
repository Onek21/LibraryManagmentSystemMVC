@model IEnumerable<LibraryManagmentSystemMVC.Application.ViewModel.UsersVm.UserForListVm>

@{
    ViewData["Title"] = "Index";
}

<h3>Użytkownicy</h3>

<p>
    <input type="button" value="Dodaj" onclick="location.href='@Url.Action("CreateUser", "User")'" class="btn btn-primary" />
<table class="table table-striped table-bordered w-auto small" id="userTable">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <input type="button" value="Edytuj" onclick="location.href='@Url.Action("EditUser", "User", new { id = item.Id })'" class="btn btn-dark btn-sm" />
                <input type="button" value="Szczegóły" onclick="location.href='@Url.Action("UserDetails", "User", new { id = item.Id })'" class="btn btn-secondary btn-sm" />
                <input type="button" value="Zmień hasło" onclick="location.href='@Url.Action("ResetPassword", "User", new { id = item.Id })'" class="btn btn-warning btn-sm" />
                <input type="button" value="Uprawnienia" onclick="location.href='@Url.Action("ChangeRoles", "User", new { id = item.Id })'" class="btn btn-info btn-sm" />
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "columns": [
                    { "width": "25%" },
                    { "width": "10%" },
                    { "width": "15%" },
                    { "width": "15%" },
                    { "width": "35%" },
                ]
            });
        });
    </script>
}